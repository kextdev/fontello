.container
  #myTabContent.tab-content
    // tab0 `Loading`
    #loading.tab-pane.fade.active.in Loading...

    // tab1 `Select
    #selector.tab-pane.fade
      ul#selector-fonts.unstyled

    // tab2 `Preview`
    #preview.tab-pane.fade
      p.note Click glyph name to edit
      #preview-font.row

    // tab3 `Download`
    #codes-editor.tab-pane.fade
      p.note Click symbol codes on black lines to edit
      #result-font

//popup graphics edit
#glyph-graphics-edit.modal.hide.fade(style="display: none;")
  .modal-header
    button.close(data-dismiss="modal")
      | x
    h3 Edit glyph
  .modal-body
    .paper.pull-left
      #graphics-edit-canvas
    .panel.pull-right
      .control-group
        label.control-label
        | Name
        .controls
          input#glyph-name(type="text")
      .control-group
        label.control-label
        | Code
        .controls
          input#glyph-code(type="text")
      .control-group
        label.control-label
        | Grid size
        .controls
          #grid-size-slider
          input#grid-size-text(type="text")
      .control-group
        label.control-label
        | Translate X
        .controls
          #glyph-tx-slider
          input#glyph-tx-text(type="text")
      .control-group
        label.control-label
        | Translate Y
        .controls
          #glyph-ty-slider
          input#glyph-ty-text(type="text")
      .control-group
        label.control-label
        | Scale
        .controls
          #glyph-scale-slider
          input#glyph-scale-text(type="text")

  .modal-footer
    button.btn(data-dismiss="modal")
      | Close
    button#glyph-save-button.btn.btn-primary
      | Save

